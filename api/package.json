{
  "name": "@romalms/api",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "code:fix": "yarn eslint --fix && prettier --write .",
    "code:check": "yarn eslint . && tsc --noEmit && prettier --check .",
    "test": "jest",
    "build": "rm -rf ./dist && tsc && tscpaths --project tsconfig.json -s ./src -o ./dist",
    "docker:serve": "NODE_ENV=production node index.js",
    "docker:build": "yarn build && docker-compose up --build",
    "dev": "ts-node src/index.ts",
    "postinstall": "npx typesync",
    "data:migrate": "npx sequelize db:migrate",
    "data:seed": "npx sequelize db:seed:all",
    "data:init": "yarn data:migrate && yarn data:seed"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "invariant": "^2.2.4",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.21.6",
    "supertest": "^6.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@babel/preset-env": "^7.19.0",
    "@babel/preset-typescript": "^7.18.6",
    "@types/babel__core": "^7.1.19",
    "@types/babel__preset-env": "^7.9.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/invariant": "^2.2.35",
    "@types/jest": "^29.0.0",
    "@types/pg": "^8.6.5",
    "@types/prettier": "^2.7.0",
    "@types/supertest": "^2.0.12",
    "babel-jest": "^29.0.2",
    "jest": "^29.0.2",
    "prettier": "^2.7.1",
    "sequelize-cli": "^6.4.1",
    "ts-node": "^10.9.1",
    "tscpaths": "^0.0.9",
    "typescript": "^4.7.4"
  }
}
